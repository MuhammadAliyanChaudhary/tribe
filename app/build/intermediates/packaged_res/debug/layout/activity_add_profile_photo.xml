<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Dull_background"
    android:orientation="vertical"
    tools:context=".LC.AddProfilePhotoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Add Profile Photo"
        android:gravity="center"
        android:layout_marginHorizontal="16dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you don’t want to add profile photo now, Don’t worry, you can add it later."
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="50dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile_photo"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:layout_marginBottom="20dp"

        >


        <Button
            android:id="@+id/btn_skip_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:background="@color/Transparent"
            android:textColor="@color/black"
            android:text="Skip"
            android:textAllCaps="false"
            android:layout_marginTop="9dp"
            />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            >

            <at.markushi.ui.CircleButton
                android:id="@+id/btn_next_profile"
                android:layout_width="64dip"
                android:layout_height="64dip"
                android:src="@drawable/ic_baseline_arrow_forward_24"
                app:cb_color="@color/main_color"
                app:cb_pressedRingWidth="8dip"

                />

        </FrameLayout>
    </RelativeLayout>


</LinearLayout>